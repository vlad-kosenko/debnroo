<?xml version="1.0"?>
<config>
    <modules>
        <MDN_Scanner>
            <version>1.3.5</version>
        </MDN_Scanner>
    </modules>
    <global>
    
        <helpers>
            <Scanner>
                <class>MDN_Scanner_Helper</class>
            </Scanner>
        </helpers>
        	    
        <blocks>
            <Scanner>
                <class>MDN_Scanner_Block</class>
            </Scanner>

        </blocks>
    	
        <models>
            <Scanner>
                <class>MDN_Scanner_Model</class>
            </Scanner>
            <admin>
                <rewrite>
                    <user>MDN_Scanner_Model_Admin_User</user>
                </rewrite>
            </admin>
        </models>
            
    </global>
    
    <adminhtml>

        <routers>
            <Scanner>
                <use>standard</use>
                <args>
                    <module>MDN_Scanner</module>
                    <frontName>Scanner</frontName>
                </args>
            </Scanner>
        </routers>

        <layout>
            <updates>
                <Scanner>
                    <file>Scanner.xml</file>
                </Scanner>
            </updates>
        </layout>
        
        <translate>
            <modules>
                <MDN_Scanner>
                    <files>
                        <default>MDN_Scanner.csv</default>
                    </files>
                </MDN_Scanner>
            </modules>
        </translate>
        
    </adminhtml>
    
    <frontend>
        <routers>
            <Scanner>
                <use>standard</use>
                <args>
                    <module>MDN_Scanner</module>
                    <frontName>Scanner</frontName>
                </args>
            </Scanner>
        </routers>
        
    </frontend>
    
    <admin>
        <routers>
            <Scanner>
                <use>admin</use>
                <args>
                    <module>MDN_Scanner</module>
                    <frontName>Scanner</frontName>
                </args>
            </Scanner>
        </routers>
    </admin>
    
    <default>
        <scanner>
            <display>
                <screen_width>240</screen_width>
                <screen_height>320</screen_height>
                <mobile_user_agent>Windows CE</mobile_user_agent>
            </display>
            <misc>
                <hide_product_row_when_qty_reached>0</hide_product_row_when_qty_reached>
                <postamble>#</postamble>
            </misc>
            <purchase_order>
                <scan_location>0</scan_location>
            </purchase_order>
            <free_delivery>
                <stock_movement_caption>Free delivery</stock_movement_caption>
            </free_delivery>
        </scanner>
    </default>
    
</config> 